// Esto se ejecuta en el servidor durante la compilación
const username = 'keniding';
const response = await fetch(`https://api.github.com/users/${username}`);
const userData = await response.json();

const reposResponse = await fetch(`https://api.github.com/users/${username}/repos?per_page=100`);
const repos = await reposResponse.json();

const totalStars = repos.reduce((acc: any, repo: any) => acc + repo.stargazers_count, 0);
const totalForks = repos.reduce((acc: any, repo: any) => acc + repo.forks_count, 0);
const languages = [...new Set(repos.map((repo: any): any => repo.language).filter(Boolean))];
