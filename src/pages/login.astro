---

import { SignedIn, SignedOut, UserButton } from "@clerk/astro/components";
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout title="Clerk + Astro">
  <!-- Fondo animado de estrellas -->
  <div class="stars-container">
    <div class="stars"></div>
    <div class="stars2"></div>
    <div class="stars3"></div>
  </div>

  <!-- Contenido principal -->
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="glass glass-card max-w-md w-full p-8 rounded-2xl text-center">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2 text-cyan-300 tracking-wider">COSMIC ACCESS</h1>
        <div class="h-1 w-32 bg-gradient-to-r from-purple-500 to-cyan-400 mx-auto mb-6"></div>
      </div>

      <SignedOut>
        <div class="space-y-6">
          <div class="p-4 rounded-xl bg-gradient-to-r from-indigo-900/30 to-purple-900/30 backdrop-blur-md">
            <h2 class="text-xl font-semibold text-cyan-200 mb-3">Acceso Restringido</h2>
            <p class="text-gray-300 mb-4">Inicia sesión para acceder al sistema estelar.</p>
            
            <button class="w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white font-medium rounded-lg transition-all duration-300 shadow-lg shadow-indigo-500/30">
              Iniciar Sesión
            </button>
          </div>
          
          <div class="flex items-center justify-center space-x-3 text-sm text-gray-400">
            <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
            <span>Sistema seguro v3.7</span>
          </div>
        </div>
      </SignedOut>

      <SignedIn>
        <div class="space-y-6">
          <div class="flex flex-col items-center">
            <div class="w-24 h-24 mb-4 relative">
              <div class="absolute inset-0 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 animate-pulse opacity-50"></div>
              <UserButton />
            </div>
            
            <h2 class="text-2xl font-bold text-cyan-200 mb-1">¡Bienvenido!</h2>
            <p class="text-gray-300">Acceso concedido al sistema</p>
          </div>
          
          <div class="grid grid-cols-2 gap-4 mt-6">
            <button class="glass p-4 rounded-lg hover:bg-white/10 transition-all duration-300">
              <div class="text-cyan-300 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </div>
              <span class="text-sm font-medium">Dashboard</span>
            </button>
            
            <button class="glass p-4 rounded-lg hover:bg-white/10 transition-all duration-300">
              <div class="text-purple-300 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="text-sm font-medium">Ajustes</span>
            </button>
            
            <button class="glass p-4 rounded-lg hover:bg-white/10 transition-all duration-300">
              <div class="text-cyan-300 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <span class="text-sm font-medium">Perfil</span>
            </button>
            
            <button class="glass p-4 rounded-lg hover:bg-white/10 transition-all duration-300">
              <div class="text-purple-300 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              </div>
              <span class="text-sm font-medium">Salir</span>
            </button>
          </div>
        </div>
      </SignedIn>
      
      <!-- Decoración de líneas de circuito -->
      <div class="absolute -bottom-3 -right-3 w-24 h-24 border-r-2 border-b-2 border-cyan-500/30 rounded-br-3xl"></div>
      <div class="absolute -top-3 -left-3 w-16 h-16 border-l-2 border-t-2 border-purple-500/30 rounded-tl-3xl"></div>
    </div>
  </div>
</SiteLayout>
