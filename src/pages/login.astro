---

import { SignedIn, SignedOut, UserButton } from "@clerk/astro/components";
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout title="Clerk + Astro">
  <!-- Fondo animado de estrellas -->
  <div class="stars-container">
    <div class="stars"></div>
    <div class="stars2"></div>
    <div class="stars3"></div>
  </div>

  <!-- Contenido principal -->
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="glass glass-card max-w-md w-full p-8 rounded-2xl text-center">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2 text-cyan-300 tracking-wider">COSMIC ACCESS</h1>
        <div class="h-1 w-32 bg-gradient-to-r from-purple-500 to-cyan-400 mx-auto mb-6"></div>
      </div>

      <SignedOut>
        <div class="space-y-6">
          <div class="p-4 rounded-xl bg-gradient-to-r from-indigo-900/30 to-purple-900/30 backdrop-blur-md">
            <h2 class="text-xl font-semibold text-cyan-200 mb-3">Acceso Restringido</h2>
            <p class="text-gray-300 mb-4">Inicia sesión para acceder al sistema estelar.</p>
            
            <button class="w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white font-medium rounded-lg transition-all duration-300 shadow-lg shadow-indigo-500/30">
              Iniciar Sesión
            </button>
          </div>
          
          <div class="flex items-center justify-center space-x-3 text-sm text-gray-400">
            <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
            <span>Sistema seguro v3.7</span>
          </div>
        </div>
      </SignedOut>

      <SignedIn>
        <div class="space-y-6">
          <div class="flex flex-col items-center">
            <div class="w-24 h-24 mb-4 relative">
              <div class="absolute inset-0 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 animate-pulse opacity-50"></div>
              <!-- <UserButton /> -->
              <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" height="100" viewBox="0 0 64 64">
